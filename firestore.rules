rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return signedIn() &&
      request.auth.uid in
      get(/databases/$(database)/documents/admin/main).data.adminUIDs;
    }

    // Admin document
    match /admin/main {
      allow read: if signedIn();
      allow write: if false;
    }

    // Settings
    match /settings/config {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Notifications
    match /notifications/{notifId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Tasks
    match /tasks/{taskId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Users
    match /users/{userId} {
      // Allow reading user profiles (needed for leaderboard and transactions)
      allow read: if signedIn();
      
      allow create: if signedIn() && request.auth.uid == userId;
      
      // Allow update if:
      // 1. It's the user themselves (e.g., deducting balance, watching ads)
      // 2. OR if the balance is INCREASING (e.g., a buyer paying this seller)
      allow update: if signedIn() && (
        request.auth.uid == userId || 
        (request.resource.data.balance > resource.data.balance)
      );
    }

    // Withdrawals
    match /withdrawals/{withdrawId} {
      allow read: if signedIn() &&
        (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if signedIn();
      allow update, delete: if isAdmin();
    }

    // Account Sales
    match /accountSales/{saleId} {
      // Allow any signed-in user to view listings
      allow read: if signedIn();
      
      // Allow creating a listing if you are the owner
      allow create: if signedIn() && request.auth.uid == request.resource.data.userId;
      
      // Allow updates (needed for marking as sold during transaction)
      allow update: if signedIn();
      
      allow delete: if isAdmin();
    }
  }
}